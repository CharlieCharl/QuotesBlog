
<p>
  <strong>Text:</strong>
  <%= @quote.text %>
  
<h2>Comments</h2>

<table>
  <% @quote.comments.each do |comment| %>
    <tr>
      <td>	
		<strong>Commenter:</strong>
		<%= comment.commenter %>
	  </td>
	</tr>
	<tr>
      <td>
	   <%= comment.body %>
	 </td>
   </tr>
  <% end %>
</table>
  
  <h2>Add a comment:</h2>
<%= form_with(model: [ @quote, @quote.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_quote_path(@quote) %> |
<%= link_to 'Back', quotes_path %>

</p>